<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-expand-sm navbar-light bg-light">
        <div class="container">
            <div class="btn btn-outline-success">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Inventory Management System", "Index", "Facilities", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav mr-auto">

                    @if ((String)Session["EmployeeIsAdmin"] == "True")
                    {
                        <li class="nav-item">@Html.ActionLink("Facilities", "Index", "Facilities",null, new { @class = "btn btn-sm btn-outline-secondary" })</li>
                        <li class="nav-item">@Html.ActionLink("Resources", "Index", "Resources", null, new { @class = "btn btn-sm btn-outline-secondary" })</li>
                        <li class="nav-item">@Html.ActionLink("Users", "Index", "Employees", null, new { @class = "btn btn-sm btn-outline-secondary" })</li>
                        <li class="nav-item">@Html.ActionLink("Report", "Index", "Report", null, new { @class = "btn btn-sm btn-outline-secondary" })</li>
                    }
                    @if ((String)Session["EmployeeIsAdmin"] == "False")
                    {
                        <li class="nav-item">@Html.ActionLink("Facilities", "Index", "Facilities", null, new { @class = "btn btn-sm btn-outline-secondary" })</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
